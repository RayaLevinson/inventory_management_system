{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@validations/*": ["./src/validations/*"],
      "@database/*": ["./src/database/*"],
      "@utils/*": ["./src/utils/*"],
      "@services/*": ["./src/services/*"],
      "@routes/*": ["./src/routes/*"],
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
